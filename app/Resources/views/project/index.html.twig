{% extends 'AppBundle::layout.html.twig' %}


{% block body %}
    <h1>Projekty</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Klient</th>
                <th>Název</th>
                <th>Placený</th>
                <th>Akce</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td><a href="{{ path('admin_project_show', { 'id': project.id }) }}">{{ project.id }}</a></td>
                <td>{{ project.client.name }}</td>
                <td>{{ project.name }}</td>
                <td>{% if project.isBilled %}<span class="text-success">Ano</span>{% else %}<span class="text-danger">Ne</span>{% endif %}</td>
                <td>
                            <a href="{{ path('admin_project_edit', { 'id': project.id }) }}" class="btn btn-default">upravit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_project_new') }}" class="btn btn-success">Nový projekt</a>
{% endblock %}
